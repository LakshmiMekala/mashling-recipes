{
  "mashling_schema": "1.0",
  "gateway": {
    "name": "JWT_validator",
    "version": "1.0.0",
    "description": "This is a simple proxy with JWT validation.",
    "triggers": [
      {
        "name": "MyProxy",
        "description": "Users rest trigger",
        "type": "github.com/TIBCOSoftware/mashling/ext/flogo/trigger/gorillamuxtrigger",
        "settings": {
          "port": "9096"
        },
        "handlers": [
          {
            "dispatch": "UsersGet",
            "settings": {
              "autoIdReply": "false",
              "method": "GET",
              "path": "/users",
              "useReplyHandler": "false"
            }
          }
        ]
      }
    ],
    "dispatches": [
      {
        "name": "UsersGet",
        "routes": [
          {
            "steps": [
              {
                "service": "JWTValidator",
                "input": {
                  "token": "${payload.header.Authorization}"
                }
              },
              {
                "service": "PetStoreUsers",
                "input": {
                  "method": "GET",
                  "pathParams.username": "${JWTValidator.response.token.claims.username}"
                }
              }
            ],
            "responses": [
              {
                "if": "JWTValidator.response.valid == false",
                "error": true,
                "output": {
                  "code": 401,
                  "data": {
                    "error": "${JWTValidator.response.validationMessage}"
                  }
                }
              },
              {
                "if": "JWTValidator.response.valid == true",
                "error": false,
                "output": {
                  "code": 200,
                  "data": {
                    "user": "${PetStoreUsers.response.body}",
                    "JWT": "JWT token is valid"
                  }
                }
              }
            ]
          }
        ]
      }
    ],
    "services": [
      {
        "name": "JWTValidator",
        "description": "Validate some tokens",
        "type": "jwt",
        "settings": {
          "signingMethod": "HMAC",
          "key": "qwertyuiopasdfghjklzxcvbnm789101",
          "audience": "www.mashling.io",
          "issuer": "Mashling"
        }
      },
      {
        "name": "PetStoreUsers",
        "description": "Make calls to get User Details",
        "type": "http",
        "settings": {
          "url": "http://petstore.swagger.io/v2/user/:username"
        }
      }
    ]
  }
}