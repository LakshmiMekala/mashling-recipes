{
    "mashling_schema": "1.0",
    "gateway": {
        "name": "rest to grpc gateway",
        "version": "1.0.0",
        "display_name":"rest to grpc gateway",
		"display_image":"displayImage.svg",
        "description": "This is a simple rest to grpc gateway server.",
        "triggers": [
            {
                "name": "MyProxy",
                "description": "Animals rest trigger - PUT animal details",
                "type": "github.com/TIBCOSoftware/mashling/ext/flogo/trigger/gorillamuxtrigger",
                "settings": {
                  "port": "9096"
                },
                "handlers": [
                  {
                    "dispatch": "Pets",
                    "settings": {
                      "autoIdReply": "false",
                      "method": "GET",
                      "path": "/pets/{petId}",
                      "useReplyHandler": "false"
                    }
                  },
                  {
                    "dispatch": "Users",
                    "settings": {
                      "autoIdReply": "false",
                      "method": "GET",
                      "path": "/user/{userName}",
                      "useReplyHandler": "false"
                    }
                  }
                ]
            }
        ],
        "dispatches": [
            {
                "name": "Users",
                "routes": [
                    {
                        "steps": [
                            {
                                "service": "PetStoreUsers",
                                "input": {
                                    "headers": "${payload.header}",
                                    "pathParams": "${payload.pathParams}"
                                }
                            }
                        ],
                        "responses": [
                            {
                                "if": "PetStoreUsers.response.body.error == 'true'",
                                "error": true,
                                "output": {
                                    "code": 404,
                                    "data": "${PetStoreUsers.response.body.details}"
                                }
                            },
                            {
                                "error": false,
                                "output": {
                                    "code": 200,
                                    "data": "${PetStoreUsers.response.body}"
                                }
                            }
                        ]
                    }
                ]
            },
            {
                "name": "Pets",
                "routes": [
                    {
                        "steps": [
                            {
                                "service": "PetStorePets",
                                "input": {
                                    "headers": "${payload.header}",
                                    "pathParams": "${payload.pathParams}"
                                }
                            }
                        ],
                        "responses": [
                            {
                                "if": "PetStorePets.response.body.error == 'true'",
                                "error": true,
                                "output": {
                                    "code": 404,
                                    "data": "${PetStorePets.response.body.details}"
                                }
                            },
                            {
                                "error": false,
                                "output": {
                                    "code": 200,
                                    "data": "${PetStorePets.response.body}"
                                }
                            }
                        ]
                    }
                ]
            }
        ],
        "services": [
            {
                "name": "PetStoreUsers",
                "description": "Make calls to PetStoreUsers grpc end point",
                "type": "grpc",
                "settings": {
                    "hosturl": "localhost:9000",
                    "protoName":"petstore",
                    "serviceName":"PetStoreService",
                    "methodName": "UserByName"
                }
            },
            {
                "name": "PetStorePets",
                "description": "Make calls to PetStorePets grpc end point",
                "type": "grpc",
                "settings": {
                    "hosturl": "localhost:9000",
                    "protoName":"petstore",
                    "serviceName":"PetStoreService",
                    "methodName": "PetById"
                }
            }
        ]
    }
}